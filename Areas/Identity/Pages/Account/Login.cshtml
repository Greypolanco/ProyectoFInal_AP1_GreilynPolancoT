@page 
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="form-group input-group">
    <div class="col-md-6">
        <img src="/Imagenes/3.jpg" class="img-fluid"  alt="Libreria Polanco">
    </div>
    <div class="col-md-4 mt-4 ms-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="col-12 row">
                    <label asp-for="Input.Email" class="form-label">Correo</label>
                    <input asp-for="Input.Email" class="form-control col-12" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br/>
                <div class="col-12 row">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br/>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <br/>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-info">Log in</button>
                </div>
                <br/>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear Nuevo Usuario</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de Confirmacion</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
